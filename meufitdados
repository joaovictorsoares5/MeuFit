function loadSection(file) {
  fetch(file)
    .then(response => response.text())
    .then(html => {
      document.getElementById('mainContent').innerHTML = html;
    });
}

// LOGIN
function login() {
  const user = document.getElementById('username').value;
  const pass = document.getElementById('password').value;
  if(user && pass) {
    localStorage.setItem('logged', true);
    loadSection('home.html');
    document.getElementById('nav').style.display = 'flex';
  } else alert('Digite nome e senha para continuar');
}

// LOGOUT
function logout() {
  localStorage.removeItem('logged');
  loadSection('login.html');
  document.getElementById('nav').style.display = 'none';
}

// Chat Didi
function sendMessage() {
  const input = document.getElementById('userMessage');
  const msg = input.value.trim();
  if(!msg) return;

  const chatBox = document.getElementById('chatBox');

  const userDiv = document.createElement('div');
  userDiv.className = 'message user';
  userDiv.innerText = msg;
  chatBox.appendChild(userDiv);

  input.value = '';
  chatBox.scrollTop = chatBox.scrollHeight;

  const botDiv = document.createElement('div');
  botDiv.className = 'message bot';
  botDiv.innerText = generateResponse(msg);
  chatBox.appendChild(botDiv);
  chatBox.scrollTop = chatBox.scrollHeight;
}

function generateResponse(msg) {
  msg = msg.toLowerCase();
  if(msg.includes('treino')) return 'VocÃª quer ver seus treinos? Clique em Treino ğŸ‹ï¸';
  if(msg.includes('forte') || msg.includes('musculo')) return 'Para ganhar mÃºsculos, pratique os exercÃ­cios regularmente e mantenha alimentaÃ§Ã£o equilibrada.';
  if(msg.includes('oi') || msg.includes('olÃ¡')) return 'Oi! Eu sou a Didi ğŸ¤–, sua assistente de treinos!';
  return 'Desculpe, nÃ£o entendi. Pode reformular?';
}

// Marcar treino como feito
function toggleDone(element) {
  element.classList.toggle('done');
}

// InicializaÃ§Ã£o
if(!localStorage.getItem('logged')) {
  loadSection('login.html');
  document.getElementById('nav').style.display = 'none';
} else {
  loadSection('home.html');
  document.getElementById('nav').style.display = 'flex';
}
